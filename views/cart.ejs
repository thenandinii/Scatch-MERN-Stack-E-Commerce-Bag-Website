<%- include('./partials/header') %>

<div class="w-full min-h-screen px-8 md:px-20 py-10 bg-gray-100">
  <h2 class="text-3xl font-semibold mb-8">Shopping Cart</h2>

  <% 
    let grandTotal = 0; 
    let platformFee = 20; 
  %>

  <div class="flex flex-col lg:flex-row gap-8">
    
    <!-- ðŸ”¹ LEFT SECTION: Cart Items -->
    <div class="w-full lg:w-2/3">

      <% user.cart.forEach(function(item) { 
          let discountAmount = Number(item.discount);
          let total = Number(item.price) - discountAmount + platformFee;
          grandTotal += total;
      %>

      <div class="flex flex-col md:flex-row bg-white rounded-lg shadow-sm mb-6 overflow-hidden hover:shadow-md transition">
        
        <!-- Image -->
        <div class="md:w-1/4 w-full bg-white p-4 flex justify-center items-center border-r">
          <img class="h-32 md:h-40 object-contain" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="<%= item.name %>">
        </div>

        <!-- Details -->
        <div class="md:w-3/4 w-full p-4 md:p-6 flex flex-col justify-between gap-4">
          
          <!-- Title + Qty -->
          <div class="flex flex-col md:flex-row justify-between gap-4">
            <div>
              <h3 class="text-lg font-semibold text-gray-800"><%= item.name %></h3>
              <p class="text-sm text-gray-500 mt-1">Product ID: <%= item._id %></p>
              <p class="text-sm mt-1">Panel Color: 
                <span class="font-medium text-[<%= item.panelcolor %>]">
                  <%= item.panelcolor %>
                </span>
              </p>
            </div>

            <!-- Quantity -->
            <div class="flex items-center gap-3 mt-2 md:mt-0">
              <button class="w-8 h-8 bg-gray-200 rounded hover:bg-gray-300 flex justify-center items-center">
                <i class="ri-subtract-line"></i>
              </button>
              <span class="text-base px-3 py-1 border rounded-md">1</span>
              <button class="w-8 h-8 bg-gray-200 rounded hover:bg-gray-300 flex justify-center items-center">
                <i class="ri-add-line"></i>
              </button>
            </div>
          </div>

          <!-- Price breakdown -->
          <div class="grid grid-cols-2 md:grid-cols-3 gap-3 text-sm mt-2 border-t pt-3">
            <div class="flex justify-between">
              <span>Total MRP</span><span>â‚¹<%= item.price %></span>
            </div>
            <div class="flex justify-between text-green-600">
              <span>Discount</span><span>- â‚¹<%= discountAmount %></span>
            </div>
            <div class="flex justify-between">
              <span>Platform Fee</span><span>â‚¹<%= platformFee %></span>
            </div>
            <div class="flex justify-between">
              <span>Shipping</span><span class="text-green-600">FREE</span>
            </div>
          </div>
        </div>
      </div>

      <% }) %>
    </div>

    <!-- ðŸ”¸ RIGHT SECTION: Summary Box -->
    <div class="w-full lg:w-1/3 h-fit bg-white rounded-lg shadow-md border p-6 sticky top-24 self-start">
      <h4 class="text-xl font-semibold mb-4">Price Details</h4>
      <div class="text-sm space-y-3 border-b pb-3">
        <div class="flex justify-between">
          <span>Total Items</span><span><%= user.cart.length %></span>
        </div>
        <div class="flex justify-between">
          <span>Shipping</span><span class="text-green-600">FREE</span>
        </div>
        <div class="flex justify-between">
          <span>Platform Fees</span><span>â‚¹ <%= user.cart.length * platformFee %></span>
        </div>
      </div>
      <div class="flex justify-between font-semibold text-lg mt-4">
        <span>Total Amount</span><span class="text-green-700">â‚¹ <%= grandTotal %></span>
      </div>

      <!-- Proceed Button -->
      <button class="mt-6 w-full bg-yellow-400 hover:bg-yellow-500 text-black font-semibold py-3 rounded shadow">
        Proceed to Buy
      </button>
    </div>

  </div>
</div>

<%- include('./partials/footer') %>
